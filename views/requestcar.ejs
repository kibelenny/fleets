<%- include('partials/header') -%>
<%- include('partials/top-navbar') -%>
<%- include('partials/side-navbar') -%>


<main class="container">
    <div class="container">
        <form action="/driver/requestcar" method="post">
            <div class="form-group">
                <input type="text" name="name" id="name"  class="form-control" placeholder="Name" required>
            </div>
    
            <div class="form-group">
                <input type="text" name="id" class="form-control" placeholder="Employee ID" required>
            </div>

            <div class="form-group">
                <label for="car_requested">Cars Available</label>
                <select name="car_requested" required>

                    <% cars.forEach(function(car){ %> 
                    <option value="car_requested">
                        <option value="<%= car.number_plate %>"> <%= car.number_plate %> - <%= car.type %> </option>
                    </option>
                    <% }) %> 
                    
                </select>
            </div>
    
            <button type="submit" class="btn btn-primary">Request Car</button> 
        </form>
    </div>    
</main>
<%- include('partials/footer') -%>