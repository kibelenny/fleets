                            <th scope = 'col'>Car</th>
                            <th scope = 'col'>HOD</th>
                            <th scope = 'col'>Finance</th>
                            <th scope = 'col'>Logistics</th>
                        </tr>
                    </thead>

                <% requests.forEach(function(request){ %> 

                    <tr>
                        <td>
                            <%= request.status %> 
                        </td>
                        <td>
                            <%= request.car %> 
                        </td>
                        <td>
                            <%= request.HOD_approver %> 
                        </td>
                        <td>
                            <%= request.finance_approver %>  
                        </td>
                        <td>
                            <%= request.logistics_approver %> 
                        </td>
                    </tr>

                <% }) %> 
                </table>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

